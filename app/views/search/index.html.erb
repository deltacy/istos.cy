 <% if @search_term.present? %>
 <% content_for :page_title, "#{@search_term} - ISTOS.CY"  %>
<% end %>

<div class="py-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= render partial: 'shared/search' %>
      </div>
    </div>
  </div>
</div>

<div class="py-4 bg-white">
  <div class="container">
    <div class="row mb-4">
      <div class="col">
        <p><%= @services.length %> results </p>
        <ul class='list-unstyled'>
          <% @services.each do |service| %>
            <li>
              <div class="wrapper">
                <h3><%= link_to service.name, service %></h3>
                <p><%= service.description %></p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
