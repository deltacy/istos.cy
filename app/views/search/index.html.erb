<div class="py-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= render partial: 'shared/search' %>
      </div>
    </div>
  </div>
</div>

<div class="py-3 bg-white">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2><%= t('services') %></h2>
        <ul class='services-grid'>

          <% @services.each do |service| %>

            <li class='service-box'>
              <div class="wrapper">
                <h3><a href="#"><%= service.name %></a></h3>
                <p><%= service.description %></p>
              </div>
            </li>

          <% end %>

        </ul>
      </div>

    </div>
  </div>
</div>

