<section class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="jumbotron-heading"><%= I18n.t('welcome', name: 'ISTOS.CY') %></h1>
        <p class="lead"><%= t('intro') %></p>
        <p class="lead"><strong><%= t('tagline') %></strong></p>
      </div>
    </div>
  </div>
</section>

<div class="py-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2><%= t('popular') %></h2>
        <ul class="most-popular">
          <% @popular_services.each do |service| %>
            <li><%= link_to service.name, service %></li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-6">
        <%= render partial: 'shared/search' %>
      </div>
    </div>
  </div>
</div>
<div class="py-4 bg-white">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2><%= t('services') %></h2>
        <ul class='services-grid'>

          <% @services.each do |service| %>

            <li class='service-box'>
              <div class="wrapper">
                <h3><%= link_to service.name, service %></h3>
                <p><%= service.description %></p>
              </div>
            </li>

          <% end %>

        </ul>
      </div>

    </div>
  </div>
</div>

